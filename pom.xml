                    <plugin>
                        <artifactId>maven-install-plugin</artifactId>
                        <version>${plug.version.install}</version>
                    </plugin>
                    <plugin>
                        <artifactId>maven-jar-plugin</artifactId>
                        <version>${plug.version.jar}</version>
