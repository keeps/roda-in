                        </executions>
                    </plugin>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>${plug.version.resources}</version>
                    </plugin>
                    <plugin>
                        <artifactId>maven-site-plugin</artifactId>
                        <version>${plug.version.site}</version>
                    </plugin>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>3.0.2</version>
                        <executions>
                            <execution>
                                <id>copy-resources</id>
                                <phase>process-classes</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.outputDirectory}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/main/resources/specific-hu</directory>
                                            <filtering>true</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>build-linux</id>
            <properties>
                <jar.id/>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.github.fvarrui</groupId>
                        <artifactId>javapackager</artifactId>
                        <version>1.6.2</version>
                        <executions>
                            <execution>
                                <id>linux-bundler</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package</goal>
                                </goals>
                                <configuration>
                                    <mainClass>org.roda.rodain.Main</mainClass>
                                    <version/>
                                    <name>RODA-in${jar.id}</name>
                                    <displayName>RODA-in${jar.id}</displayName>
                                    <bundleJre>true</bundleJre>
                                    <customizedJre>false</customizedJre>
                                    <generateInstaller>true</generateInstaller>
                                    <platform>linux</platform>
                                    <runnableJar>target/rodain-app${jar.id}-${project.version}_OtherOS.jar</runnableJar>
                                    <additionalResources>
                                        <additionalResource>src/main/resources</additionalResource>
                                    </additionalResources>
                                    <linuxConfig>
                                        <pngFile>src/main/resources/RODA-in${jar.id}.png</pngFile>
                                    </linuxConfig>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>build-windows</id>
            <properties>
                <jar.id/>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.github.fvarrui</groupId>
                        <artifactId>javapackager</artifactId>
                        <version>1.6.2</version>
                        <executions>
                            <execution>
                                <id>windows-bundler</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package</goal>
                                </goals>
                                <configuration>
                                    <!-- mandatory -->
                                    <mainClass>org.roda.rodain.Main</mainClass>
                                    <!-- optional -->
                                    <name>RODA-in${jar.id}</name>
                                    <displayName>RODA-in${jar.id}</displayName>
                                    <bundleJre>true</bundleJre>
                                    <customizedJre>false</customizedJre>
                                    <generateInstaller>true</generateInstaller>
                                    <platform>windows</platform>
                                    <createZipball>true</createZipball>
                                    <runnableJar>target/rodain-app${jar.id}-${project.version}_OtherOS.jar</runnableJar>
                                    <additionalResources>
                                        <additionalResource>src/main/resources</additionalResource>
                                    </additionalResources>
                                    <winConfig>
                                        <headerType>gui</headerType>
                                        <icoFile>src/main/resources/roda2-logo.ico</icoFile>
                                        <generateSetup>true</generateSetup>
                                        <wrapJar>true</wrapJar>
                                        <fileVersion>1.0.0.0</fileVersion>
                                        <txtFileVersion>1.0.0.0</txtFileVersion>
                                        <fileDescription>Desc</fileDescription>
                                        <copyright>C</copyright>
                                        <productVersion>2.0.0.3</productVersion>
                                        <txtProductVersion>2.0.0.3</txtProductVersion>
                                        <productName>RODA-in</productName>
                                        <internalName>RODA-in</internalName>
                                        <originalFilename>RODA-in${jar.id}.exe</originalFilename>
                                    </winConfig>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
